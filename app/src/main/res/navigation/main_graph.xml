<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/coinsFragment">

    <fragment
        android:id="@+id/coinsFragment"
        android:name="com.example.cryptocurrency.coin.CoinsFragment"
        android:label="coins_fragment"
        tools:layout="@layout/coins_fragment" >
        <action
            android:id="@+id/action_coinsFragment_to_coinDetailsFragment"
            app:destination="@id/coinDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/coinDetailsFragment"
        android:name="com.example.cryptocurrency.coinDetails.CoinDetailsFragment"
        android:label="coin_details_fragment"
        tools:layout="@layout/coin_details_fragment" />
</navigation>